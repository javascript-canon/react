{
  "name": "javascript-canon",
  "version": "1.0.0",
  "description": "a presentation of the most important learning JavaScript resources",
  "author": "Kai 'kaidez' Gittens",
  "license": "ISC",
  "main": "app.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/javascript-canon/react.git"
  },
  "scripts": {
    "build-js": "browserify js-build/*.js | uglifyjs -mc > public/js/scripts.js",
    "build-sass": "node-sass css-build/style.scss css-build/style.css",
    "concat-css": "cat css-build/*.css > public/css/style.css",
    "clean-css": "cleancss public/css/style.css --s0 -o public/css/style.css",
    "build-css": "npm run build-sass && npm run concat-css && npm run clean-css",
    "build": "npm run build-css && npm run build-js",
    "watch-js": "nodemon -e js -w js-build -x 'npm run build-js && npm run copy-example'",
    "watch-css": "nodemon -e scss -w css-build -w css-build/imports -x 'npm run build-css && npm run copy-example'",
    "image-minify": "imagemin image-build/* --out-dir=public/img/",
    "book-minify": "imagemin image-build/book-images/* --out-dir=public/img/book-images/",
    "copy-normalize": "ncp node_modules/normalize.css/normalize.css css-build/normalize.css",
    "copy-example": "rsync -av --exclude='css-build/' --exclude='js-build/' --exclude='node_modules/' --exclude='.gitignore' --exclude='Gruntfile.js' --exclude='app.js' --exclude='package.json' --exclude='page-mock.psd' --exclude='.DS_Store' --exclude='.git/ '  ../react/ ../../javascript-canon/react/",
    "start": "npm run watch-js & npm run watch-css",
    "wp": "./node_modules/.bin/webpack-dev-server"
  },
  "devDependencies": {
    "autoprefixer-loader": "^3.2.0",
    "babel-cli": "^6.18.0",
    "babel-loader": "^6.2.5",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "browserify": "^13.1.1",
    "clean-css": "^3.4.21",
    "css-loader": "^0.26.1",
    "json-loader": "^0.5.4",
    "ncp": "^2.0.0",
    "node-sass": "^4.0.0",
    "nodemon": "1.11.0",
    "normalize.css": "^5.0.0",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "uglifyjs": "^2.4.10",
    "webpack": "^1.13.3",
    "webpack-dev-server": "^1.16.2"
  },
  "dependencies": {
    "ejs": "^2.5.3",
    "express": "^4.14.0",
    "jquery": "^3.1.0",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-icons": "^2.2.2",
    "underscore": "^1.8.3"
  }
}
